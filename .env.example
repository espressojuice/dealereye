# DealerEye Environment Configuration Example
# Copy to .env and fill in values

# ===== EDGE CONFIGURATION =====
EDGE_ID=edge-001
TENANT_ID=00000000-0000-0000-0000-000000000000
SITE_ID=00000000-0000-0000-0000-000000000000

# MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_QOS=1

# Video Processing
BATCH_SIZE=4
TARGET_FPS=15
CONFIDENCE_THRESHOLD=0.5
NMS_THRESHOLD=0.45

# DeepStream Paths
DEEPSTREAM_CONFIG_PATH=/opt/dealereye/config/deepstream_config.txt
YOLO_ENGINE_PATH=/opt/dealereye/models/yolo.engine
BYTETRACK_CONFIG_PATH=/opt/dealereye/config/bytetrack_config.txt

# ===== CONTROL PLANE CONFIGURATION =====

# Database
DATABASE_URL=postgresql://dealereye:dealereye123@localhost:5432/dealereye

# Redis
REDIS_URL=redis://localhost:6379/0

# API
API_HOST=0.0.0.0
API_PORT=8000
JWT_SECRET=change-this-to-a-secure-random-string
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Object Storage (S3 or Wasabi)
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=dealereye-clips
S3_REGION=us-east-1

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Metrics Configuration
METRICS_COMPUTE_INTERVAL_SECONDS=60
TTG_MAX_MATCH_WINDOW_SECONDS=300

# ===== DASHBOARD CONFIGURATION =====
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000
